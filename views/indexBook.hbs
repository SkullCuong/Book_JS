<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Name</th>
            <th scope="col">Name</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        {{#each book}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.author}}</td>
            <td>{{this.supplier.name}}</td>
            <td>
                <form action="/book/delete/{{this.id}}" method="POST">
                    <button type="submit" onclick="return confirmDelete()">Delete</button>
                </form>
            </td>

        </tr>
        {{/each}}
    </tbody>
</table>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>